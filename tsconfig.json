{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "include": [
    "src/**/*",
    "declarations"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts"
  ],
  "compileOnSave": true
}
