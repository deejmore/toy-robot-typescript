  "version": "0.2.0",
  "configurations": [{
      "name": "Launch Program",
      "type": "node2",
      "request": "launch",
      "program": "${workspaceRoot}/lib/main.js",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Attach to Process",
      "type": "node2",
      "request": "attach",
      "port": 9229
    },
    {
      "name": "Run mocha test",
      "type": "node2",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Run mocha test with watch",
      "type": "node2",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": ["--watch"],
      "cwd": "${workspaceRoot}"
    }
  ]
}
